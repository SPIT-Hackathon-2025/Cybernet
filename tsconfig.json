{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "@types/jest",
      "expo-linear-gradient"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
